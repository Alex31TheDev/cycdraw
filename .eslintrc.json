{
    "env": {
        "node": true,
        "es2023": true
    },
    "extends": "eslint:recommended",
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "script"
    },
    "rules": {
        "no-unused-vars": "off",
        "no-ex-assign": "off",
        "no-case-declarations": "off",
        "no-constant-condition": "off",
        "no-empty": "off",
        "no-debugger": "off",
        "no-global-assign": "off",
        "no-useless-escape": "warn",
        "eqeqeq": ["error", "always", { "null": "ignore" }]
    },
    "globals": {
        "tag": "writable",
        "msg": "writable",
        "util": "writable",
        "http": "writable",
        "vm": "writable",

        "CustomError": "writable",
        "ExitError": "writable",

        "Benchmark": "writable",
        "HttpUtil": "writable",
        "LoaderUtils": "writable",
        "exit": "writable",
        "FileDataTypes": "writable",
        "ModuleLoader": "writable",
        "Patches": "writable",

        "loadSource": "writable",
        "enableDebugger": "writable",

        "XzDecompressor": "writable",
        "ZstdDecompressor": "writable",

        "CanvasKit": "writable",
        "Resvg": "writable",
        "lodepng": "writable",

        "loadLibrary": "writable",
        "loadBase2nDecoder": "writable",
        "loadXzDecompressor": "writable",
        "loadZstdDecompressor": "writable"
    }
}
